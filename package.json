  },
  "main": "index.js",
  "module": "dist/js-surface.core.esm.production.js",
  "unpkg": "dist/js-surface.core.umd.production.js",
  "jsdelivr": "dist/js-surface.core.umd.production.js",
  "types": "dist/types/modules/core/main/index.d.ts",
  "files": [
    "index.js",
    "dom.js",
    "hooks.js",
    "html.js",
    "svg.js",
    "use.js",
    "util.js",
    "dist"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.0",
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "bestzip": "^1.1.6",
    "chai": "^4.1.2",
    "cli-watch": "^1.0.7",
    "copyfiles": "^2.0.0",
    "cross-conf-env": "^1.1.2",
    "cross-env": "^5.2.0",
    "js-spec": "^0.1.61",
    "mocha": "^5.1.1",
    "nyc": "^13.0.1",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-gzip": "^2.2.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-serve": "^0.6.1",
    "rollup-plugin-terser": "^4.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "shx": "^0.2.2",
    "ts-loader": "^5.1.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "ziptool": "^1.0.2"
  },
  "depencencies": {
    "js-spec": "^0.1.61",
    "react": "16.7.0-alpha.0",
    "react-dom": "16.7.0-alpha.0"
  },
  "scripts": {
    "clean": "shx rm -rf ./build ./dist",
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=4096 rollup --c rollup.config.js && tsc -d --emitDeclarationOnly --declarationDir dist/types",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register src/modules/**/test/**/*.ts",
    "test-watch": "mocha -w -r ts-node/register -r source-map-support/register src/modules/**/test/**/*.ts",
    "demo": "rollup --c rollup.demo.config.js -w",
    "zipsource": "shx rm -rf ./build/source && shx mkdir -p ./build/source && copyfiles -a ./* ./build/source && shx cp -r ./src ./build/source && shx mkdir -p ./dist/source && cd build/source && bestzip ../../dist/source/source.zip . && cd ../..",
    "dist": "npm run clean && npm run test && npm run build && npm run zipsource"
  }
}
